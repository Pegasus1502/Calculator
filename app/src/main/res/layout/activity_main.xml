<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_neo"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <soup.neumorphism.NeumorphCardView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:neumorph_shapeType="basin"
            >
            

            <EditText
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="80dp"
                android:layout_weight="1"
                android:background="@drawable/result"
                android:editable="false"
                android:gravity="center_vertical"
                android:inputType="none"
                android:paddingRight="30dp"
                android:scrollHorizontally="true"
                android:text=" "
                android:textAlignment="viewEnd"

                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textSize="85sp"

                android:textStyle="bold"
                tools:ignore="Deprecated,RtlCompat" />

            <EditText
                android:id="@+id/workingsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:background="@drawable/result"
                android:editable="false"
                android:gravity="center_vertical"
                android:inputType="none"
                android:paddingRight="30dp"
                android:text=" "
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textSize="50sp"
                android:textStyle="bold"
                tools:ignore="Deprecated,RtlCompat" />

        </soup.neumorphism.NeumorphCardView>


    </LinearLayout>

    <soup.neumorphism.NeumorphCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:neumorph_shapeType="basin"
        android:gravity="center"
        android:layout_margin="1dp"
        android:backgroundTint="@color/white_neo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_black"
                    android:onClick="clearOnClick"
                    android:text="C"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_black"
                    android:onClick="bracketsOnClick"
                    android:text="( )"
                    android:textColor="@color/white"
                    android:textSize="40sp" />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_black"
                    android:onClick="powerOfOnClick"
                    android:text="^"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_black"
                    android:onClick="divisionOnClick"
                    android:src="@drawable/ic_divide"
                    app:tint="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="sevenOnClick"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="eightOnClick"

                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="nineOnClick"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_black"
                    android:onClick="timesOnClick"
                    android:text="X"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="fourOnClick"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="fiveOnClick"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="sixOnClick"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_black"
                    android:onClick="minusOnClick"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="oneOnClick"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="twoOnClick"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="threeOnClick"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_black"
                    android:onClick="plusOnClick"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="40dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="doublezeroOnClick"
                    android:text="00"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="decimalOnClick"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="40sp" />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center"
                    android:onClick="zeroOnClick"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="40sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_effect_black"
                    android:onClick="equalsOnClick"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="40sp" />


            </LinearLayout>
        </LinearLayout>


    </soup.neumorphism.NeumorphCardView>


</androidx.constraintlayout.widget.ConstraintLayout>